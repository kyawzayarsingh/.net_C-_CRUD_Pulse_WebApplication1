@model IEnumerable<WebApplication1.Models.Info>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    <span>

        @using (Html.BeginForm("Index", "Infoes", FormMethod.Get, htmlAttributes: new { @class = "text-right" }))
        {
            <input type="submit" formaction="Infoes/DownloadPDFReport" value="PDF-Download" class="btn btn-secondary" />
            <input type="submit" formaction="Infoes/DownloadExcelReport" value="Excel-Download" class="btn btn-secondary" />
            <input type="submit" formaction="Infoes/SendEmail" value="Email-Report" class="btn btn-secondary" />
            <input type="submit" formaction="Infoes/PDF" value="ITextSharpPDF" class="btn btn-secondary"/>
        }
    </span>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FatherName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatherName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
